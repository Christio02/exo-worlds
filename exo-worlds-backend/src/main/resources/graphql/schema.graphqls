type Query {
    planets: [Planet!]
    planet(id: ID!): Planet
}

type Planet {
    id: ID!
    name: String!
    mass: Float!
    radius: Float!
    habitabilityIndex: Float!
    imageType: String!
    imageData: String!
}

type Mutation {
    createPlanet(
        name: String!
        mass: Float!
        radius: Float!
        orbitalPeriod: Float!
        planetTemperature: Float
        stellarTemperature: Int!
        stellarRadius: Float!
    ): Planet
}