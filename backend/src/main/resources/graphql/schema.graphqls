enum SortField {
  NAME
  MASS
  RADIUS
  HABITABILITY_INDEX
}

enum SortDirection {
  ASC
  DESC
}

input PlanetFilter {
  minMass: Float
  maxMass: Float
  minRadius: Float
  maxRadius: Float
  minHabitabilityIndex: Float
  maxHabitabilityIndex: Float
  nameContains: String
}

type Query {
  planets(sortBy: SortField, sortDirection: SortDirection, filter: PlanetFilter): [Planet!]
  planet(id: ID!): Planet
}

type Planet {
  id: ID!
  name: String!
  mass: Float!
  radius: Float!
  habitabilityIndex: Float!
  imageType: String!
  imageData: String!
}

type PagedPlanets {
  planets: [Planet!]!
  totalPages: Int!
  totalElements: Int!
  currentPage: Int!
}

type Mutation {
  createPlanet(
    name: String!
    mass: Float!
    radius: Float!
    orbitalPeriod: Float!
    planetTemperature: Float
    stellarTemperature: Int!
    stellarRadius: Float!
  ): Planet
}
